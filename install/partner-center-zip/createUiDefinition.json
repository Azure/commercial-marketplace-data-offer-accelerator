{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "basics": {
                "location": {
                    "label": "Location",
                    "toolTip": "Regions to deploy publisher resources",
                    "resourceTypes": ["Microsoft.DataShare/accounts"],
                    "allowedValues": [
                        "Australia East",
                        "East US 2",
                        "East US",
                        "North Europe",
                        "South Central US",
                        "Southeast Asia",
                        "UK South",
                        "West Europe",
                        "West US 2"
                    ],
                    "visible": true
                }
            }
        },
        "basics": [],
        "steps": [{
            "name": "storageConfig",
            "label": "Storage settings",
            "subLabel": {
                "preValidation": "Configure the infrastructure settings",
                "postValidation": "Done"
            },
            "bladeTitle": "Storage settings",
            "elements": [
                {
                    "name": "moreInfo3",
                    "type": "Microsoft.Common.InfoBox",
                    "visible": true,
                    "options": {
                        "icon": "Info",
                        "text": "The Storage account name prefix sets the first part of the name of the Azure Storage account to be created."
                    }
                },
                {
                    "count": 1,
                    "name": "storageAccounts",
                    "type": "Microsoft.Storage.MultiStorageAccountCombo",
                    "visible": true,
                    "label": {
                        "prefix": "Storage account name prefix",
                        "type": "Storage account type"
                    },
                    "defaultValue": {
                        "type": "Standard_LRS"
                    },
                    "constraints": {
                        "allowedTypes": [
                            "Premium_LRS",
                            "Standard_LRS",
                            "Standard_GRS"
                        ]
                    }
                },
                {
                    "name": "moreInfo4",
                    "type": "Microsoft.Common.InfoBox",
                    "visible": true,
                    "options": {
                        "icon": "Info",
                        "text": "The below 'System assigned managed identity' is needed to assign permissions to your new application, but is disabled for change."
                    }
                },
                {
                    "name": "appIdentity",
                    "type": "Microsoft.ManagedIdentity.IdentitySelector",
                    "label": "Managed Identity Configuration",
                    "defaultValue": {
                        "systemAssignedIdentity": "OnOnly"
                    },
                    "options": {
                        "hideSystemAssignedIdentity": false,
                        "hideUserAssignedIdentity": true,
                        "readOnlySystemAssignedIdentity": true
                    },
                    "visible": true
                }
            ]
        }],
        "outputs": {
            "storageAccountNamePrefix": "[steps('storageConfig').storageAccounts.prefix]",
            "storageAccountType": "[steps('storageConfig').storageAccounts.type]",
            "location": "[location()]",
            "managedIdentity": "[steps('storageConfig').appIdentity]"
        }
    }
}